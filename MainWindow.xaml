<Window x:Class="U1_002_JakobOutput.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:U1_002_JakobOutput"
        mc:Ignorable="d"
        Title="Output" Height="500" Width="800">
    <StackPanel>
        <Slider x:Name="Sldr"  Margin="30,0,79.6,0" 
            Value="0" Minimum="0" Maximum="117" 
            SmallChange="1" LargeChange="10"
            TickPlacement="BottomRight" TickFrequency="5" ValueChanged="Sldr_ValueChanged" Height="29"/>
        <Label x:Name="LblOutput"
               Content="My label" Margin="30,0,10.6,0"/>

    </StackPanel>
</Window>
